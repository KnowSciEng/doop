// StringRaw
.decl StringRaw(?id:symbol, ?rawId:symbol) input
.decl isStringRaw(?id:symbol)

isStringRaw(?id),
String_toRaw(?id, ?rawId) :-
    StringRaw(?id, ?rawId).

// ClassHeap
