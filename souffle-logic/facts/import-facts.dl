// NormalHeap
.decl NormalHeap(?id:symbol, ?type:symbol) input
.decl isNormalHeap(?id:HeapAllocation)

isNormalHeap(?heap),
HeapAllocation_Type(?id, ?type) :-
    NormalHeap(?id, ?type).

